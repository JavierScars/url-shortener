generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ShortenedUrl {
  id         Int      @id @default(autoincrement())
  url        String
  hash       String   @unique
  createdAt  DateTime @default(now())
  userId     Int?
  user       User?    @relation(fields: [userId], references: [id])
  visitCount Int      @default(0)
}

model User {
  id       Int            @id @default(autoincrement())
  username String         @unique
  password String
  urls     ShortenedUrl[]
}
